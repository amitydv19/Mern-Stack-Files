<-- Left Shift -->
let num1 = 5;
// Binary representation of 5 : 0 0 0 0 1 0 1

let num2 = 8;
// Binary representation of 7 : 0 0 0 1 0 0 0

console.log(num1 << 3);     // 40
console.log(num2 << 2);     // 32



<-- Right Shift -->
let num1 = 5;
// Binary representation of 5 : 0 0 0 0 1 0 1

let num2 = 8;
// Binary representation of 7 : 0 0 0 1 0 0 0

console.log(num1 >> 3);     // 0
console.log(num2 >> 2);     // 2
